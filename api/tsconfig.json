{
  "compilerOptions": {
    "target": "ES2022",
    "module": "ESNext",
    "moduleResolution": "Node",
    "rootDir": "src",
    "outDir": "dist",
    "baseUrl": "./src",
    "paths": {
      "@config": ["config/index.ts"],
      "@config/*": ["config/*"],
      "@drivers": ["drivers/index.ts"],
      "@db/*": ["db/*"],
      "@router/*": ["router/*"],
      "@router": ["router/index.ts"],   
      "@controllers/*": ["controllers/*"],
      "@middlewares/*": ["middlewares/*"],
      "@services/*": ["services/*"],
      "@utils/*": ["utils/*"]
    },
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true,
    "strict": false, // TODO: после полного перехода на TS перевести в true
    "allowJs": true // TODO: после полного перехода на TS убрать
  },
  "include": ["src/**/*.js", "src/**/*.ts"],
  "exclude": ["node_modules"],
}
