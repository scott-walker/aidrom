{
  "compilerOptions": {
    "target": "ES2022",
    "module": "ESNext",
    "moduleResolution": "Node",
    "rootDir": ".",
    "outDir": "dist",
    "baseUrl": ".",
    "paths": {
      "@config": ["src/config/index.ts"],
      "@config/*": ["src/config/*"],
      "@drivers": ["src/drivers/index.ts"],
      "@db": ["src/db/index.ts"],
      "@router/*": ["src/router/*"],
      "@router": ["src/router/index.ts"],   
      "@controllers/*": ["src/controllers/*"],
      "@middlewares/*": ["src/middlewares/*"],
      "@services/*": ["src/services/*"],
      "@utils/*": ["src/utils/*"]
    },
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true,
    "strict": false, // TODO: после полного перехода на TS перевести в true
    "allowJs": true // TODO: после полного перехода на TS убрать
  },
  "include": [
    "src/**/*.js",
    "src/**/*.ts",
    "drizzle.config.ts"
  ],
  "exclude": ["node_modules"],
}
